# Doxyfile для документации кода calc.py

# Путь к входному файлу
INPUT = calc.py

# Генерация документации в формате HTML
GENERATE_HTML = YES

# Не генерировать документацию в формате LaTeX
GENERATE_LATEX = NO

# Директория для вывода документации
OUTPUT_DIRECTORY = docs

# Шаблон для заголовка страницы
HTML_HEADER = <head><title>Документация к коду calc.py</title></head>

# Шаблон для футера страницы
HTML_FOOTER = <hr><address>Generated by Doxygen</address>

# Язык документации
LANGUAGE = Russian

# Кодировка документации
ENCODING = UTF-8

# Уровень детализации документации
EXTRACT_ALL = YES

# Включать информацию о функциях и переменных
EXTRACT_PRIVATE = YES
EXTRACT_STATIC = YES

# Включать информацию о классах и модулях
EXTRACT_CLASS = YES
EXTRACT_NAMESPACE = YES

# Включать информацию о наследовании классов
CLASS_DIAGRAMS = YES

# Включать информацию о связях между классами
COLLABORATION_GRAPH = YES

# Включать информацию о наследовании функций
FUNCTION_CALL_GRAPH = YES
